@model IEnumerable<ArabaKiralama.Models.Car>
@{
    ViewData["Title"] = "Araç Filomuz";
}

<div class="d-flex justify-content-between align-items-center my-4">
    <h2 class="text-primary fw-bold"><i class="bi bi-collection-fill me-2"></i>Kiralık Araç Filomuz</h2>
    <a asp-action="Create" class="btn btn-success btn-lg shadow-sm"><i class="bi bi-plus-lg me-1"></i>Yeni Araç Tanımla</a>
</div>

<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-md-4 mb-4">
            <div class="card h-100 shadow-sm">
                <img src="@(string.IsNullOrEmpty(item.ImageUrl) ? "https://placehold.co/400x250/bdc3c7/FFF?text=Resim+Yok" : item.ImageUrl)"
                     class="card-img-top p-1 rounded-top-4"
                     alt="@item.Brand @item.Model"
                     style="height: 200px; object-fit: cover;">

                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center mb-2">
                        <h4 class="card-title mb-0 fw-bold text-dark">@item.Brand @item.Model</h4>
                        <span class="badge bg-secondary">@item.Year</span>
                    </div>
                    <hr />
                    <p class="card-text mb-1"><i class="bi bi-card-text me-2 text-muted"></i><strong>Plaka:</strong> @item.Plate</p>
                    <h3 class="text-primary fw-bold mt-3">@item.PricePerDay ₺ <small class="fs-6 text-muted">/ Günlük</small></h3>
                </div>
                <div class="card-footer bg-white border-top-0 d-flex justify-content-between pb-3">
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-warning flex-fill me-1">Düzenle</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-outline-danger flex-fill ms-1" onclick="return confirm('Bu aracı silmek istediğinize emin misiniz?')">Sil</a>
                </div>
            </div>
        </div>
    }
</div>

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">